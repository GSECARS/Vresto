#main-btn {
    background: #344152;
    color: #e6e6e6;
    border: 1px solid #e6e6e6;
    font-family: "Times New Roman";
    font-size: 16px;
    border-radius: 4px;
    padding: 5px;
}

#main-btn:hover, #main-btn:focus {
    background: #e6e6e6;
    color: #344152;
}

QGroupBox {
    font-family: "Times New Roman";
    font-size: 18px;
    margin-top: 15px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
}
